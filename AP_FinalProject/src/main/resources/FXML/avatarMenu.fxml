<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.chart.BubbleChart?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.profile.AvatarMenuController"
      stylesheets="@../CSS/menuStyle.css"
      styleClass="avatar-background"
      prefHeight="600.0" prefWidth="900.0">
    <Label text="Avatar Menu" layoutX="450" layoutY="50" style="-fx-font-size: 30"/>
    <Text text="Choose one of these Avatars" x="350" y="150" styleClass="instruction-text" style="-fx-font-size: 15"/>
    <Rectangle width="77" height="77" x="348" y="178"/>
    <Rectangle width="75" height="75" x="350" y="180" fx:id="first" onMouseClicked="#chooseAvatar1"/>
    <Rectangle width="77" height="77" x="433" y="178"/>
    <Rectangle width="75" height="75" x="435" y="180" fx:id="second" onMouseClicked="#chooseAvatar2"/>
    <Rectangle width="77" height="77" x="518" y="178"/>
    <Rectangle width="75" height="75" x="520" y="180" fx:id="third" onMouseClicked="#chooseAvatar3"/>
    <Rectangle width="77" height="77" x="603" y="178"/>
    <Rectangle width="75" height="75" x="605" y="180" fx:id="fourth" onMouseClicked="#chooseAvatar4"/>
    <Rectangle width="77" height="77" x="688" y="178"/>
    <Rectangle width="75" height="75" x="690" y="180" fx:id="fifth" onMouseClicked="#chooseAvatar5"/>
    <Rectangle width="77" height="77" x="773" y="178"/>
    <Rectangle width="75" height="75" x="775" y="180" fx:id="sixth" onMouseClicked="#chooseAvatar6"/>
    <Text text="Choose a file" x="350" y="320" styleClass="instruction-text" style="-fx-font-size: 15"/>
    <Button text="choose" layoutX="600" layoutY="300" style="-fx-min-width: 15; -fx-min-height: 30; -fx-font-size: 15"
    onMouseClicked="#changeAvatarChoose" fx:id="button"/>
    <Text text="Drag and Drop" x="400" y="400" styleClass="instruction-text" style="-fx-font-size: 15"/>
    <Rectangle fx:id="dragDrop" y="430" x="450" height="100" width="250" onDragOver="#handleDragOver"
               style="-fx-fill: transparent; -fx-stroke: gold" onDragDropped="#handleDragDropped"/>
    <Button layoutX="550" layoutY="550" text="back" onMouseClicked="#backToProfile"/>

</Pane>
