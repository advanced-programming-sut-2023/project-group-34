<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Rectangle?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.game.LobbyMenuController"
            stylesheets="@../CSS/scoreBoardStyle.css"
            styleClass="BackGroundRegister"
            prefHeight="Infinity" prefWidth="Infinity">
    <Label text="Game Lobby" layoutX="620" layoutY="80"
           style="-fx-font-size: 30; -fx-text-fill:
           gold; -fx-font-family: Bahnschrift; -fx-font-style: oblique; -fx-font-weight: bold"/>

    <Label text="ID: " layoutX="920" layoutY="80"
           style="-fx-font-size: 30; -fx-text-fill:
           gold; -fx-font-family: Bahnschrift; -fx-font-style: oblique; -fx-font-weight: bold" fx:id="lobbyId"/>

    <Label text="Status: " layoutX="1020" layoutY="80"
           style="-fx-font-size: 30; -fx-text-fill:
           gold; -fx-font-family: Bahnschrift; -fx-font-style: oblique; -fx-font-weight: bold" fx:id="lobbyStatus"/>

    <Button text="Private" layoutX="360" layoutY="100" onMouseClicked="#setPrivate"/>
    <Button text="Public" layoutX="450" layoutY="100" onMouseClicked="#setPublic"/>


    <Button text="back" layoutX="800" layoutY="680" onMouseClicked="#backToMain"/>
    <Button text="Start Game" layoutX="870" layoutY="680"/>
    <Button text="ChatRoom" layoutX="990" layoutY="680" onMouseClicked="#onToLobbyChat"/>

    <Rectangle width="75" height="75" layoutX="560" layoutY="150" fx:id="avatar1"/>
    <Rectangle width="75" height="75" layoutX="560" layoutY="250" fx:id="avatar2"/>
    <Rectangle width="75" height="75" layoutX="560" layoutY="350" fx:id="avatar3"/>
    <Rectangle width="75" height="75" layoutX="560" layoutY="450" fx:id="avatar4"/>
    <Label layoutX="670" layoutY="170" fx:id="name1" text="Name: " styleClass="instruction-text"/>
    <Label layoutX="670" layoutY="270" fx:id="name2" text="Name: " styleClass="instruction-text"/>
    <Label layoutX="670" layoutY="370" fx:id="name3" text="Name: " styleClass="instruction-text"/>
    <Label layoutX="670" layoutY="470" fx:id="name4" text="Name: " styleClass="instruction-text"/>



</AnchorPane>
