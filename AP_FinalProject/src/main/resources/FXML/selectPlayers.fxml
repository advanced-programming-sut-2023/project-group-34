<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.game.SelectPlayersMenuController"
            stylesheets="@../CSS/scoreBoardStyle.css"
            styleClass="BackGroundRegister"
            prefHeight="Infinity" prefWidth="Infinity">
    <Label text="Select The players you want to play with" layoutX="560" layoutY="80"
           style="-fx-font-size: 30; -fx-text-fill:
           gold; -fx-font-family: Bahnschrift; -fx-font-style: oblique; -fx-font-weight: bold"/>
    <Text text="You can only select players up to 4 players" styleClass="errorHandling" x="560" y="150"/>
    <TextField promptText="username" layoutX="690" layoutY="200" fx:id="username" style="-fx-prompt-text-fill: gold; -fx-text-fill: gold"/>
    <Text fx:id="error" styleClass="errorHandling" x="780" y="260"/>
    <Button text="confirm" fx:id="confirm" layoutX="700" layoutY="280" onMouseClicked="#addPlayer"/>
    <Button text="back" layoutX="800" layoutY="280" onMouseClicked="#backToMain"/>
    <Button text="Start Game" layoutX="750" layoutY="360"/>



</AnchorPane>
